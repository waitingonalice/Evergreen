{
  "private": "true",
  "name": "expense-tracker",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:waitingonalice/Expense-tracker.git",
  "author": "Wilson <fcsie55@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commitizen": "^4.2.5"
  },
  "scripts": {
    "dev": "lerna run dev",
    "build": "lerna run build",
    "build:backend": "yarn workspace backend build",
    "build:shared": "yarn workspace @expense-tracker/shared build",
    "build:frontend": "yarn workspace frontend build",
    "lint": "run-p lint:*",
    "lint:frontend": "eslint ./frontend --cache --cache-location ./node_modules/.cache/eslint",
    "lint:backend": "eslint ./backend --cache --cache-location ./node_modules/.cache/eslint",
    "typecheck": "lerna run typecheck",
    "typecheck:frontend": "tsc --noEmit --skipLibCheck --project ./frontend/tsconfig.json",
    "typecheck:backend": "tsc --noEmit --skipLibCheck --project ./backend/tsconfig.json",
    "typecheck:shared": "tsc --noEmit --skipLibCheck --project ./shared/tsconfig.json",
    "prettier:write": "prettier . --write",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.3",
    "lerna": "^7.3.0",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "prettier-plugin-sort-json": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tsc-files": "^1.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint ./frontend",
      "eslint ./backend",
      "prettier --write --ignore-unknown"
    ]
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ]
}
